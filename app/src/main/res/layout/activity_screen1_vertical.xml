<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:keepScreenOn="true"
    android:nestedScrollingEnabled="false"
    tools:context=".Activities.Screen1VerticalActivity">


    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="13dp"
        android:visibility="gone" />

    <RelativeLayout

        android:id="@+id/header"
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="2dp"
         >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/powerball" />

                    <TextView
                        android:id="@+id/powerbalprice"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:textColor="#000000"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/powerbalpriceday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:text="MON | WED | SAT"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/megaball" />

                    <TextView
                        android:id="@+id/megamilions"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:rotation="-90"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/megamilionsday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="TUE | FRI"
                        android:rotation="-90"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/texaslotto" />

                    <TextView
                        android:id="@+id/lottotexas"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:rotation="-90"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lottotexasday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:text="MON | WED | SAT"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/texastwosteps" />

                    <TextView
                        android:id="@+id/texastwostep"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texastwostepday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:text="MON | THU"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/picktheree" />

                    <TextView
                        android:id="@+id/pick3"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:rotation="-90"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pick3day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="MON | SAT"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/dailyfour" />

                    <TextView
                        android:id="@+id/daily4"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:minLines="2"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/daily4day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:text="MON | SAT"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:src="@drawable/cashfive" />

                    <TextView
                        android:id="@+id/cash_five"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cash_fiveday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="MON | SAT"
                        android:rotation="-90"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:rotation="-90"
                        android:layout_height="wrap_content"
                        android:src="@drawable/allornothing" />

                    <TextView
                        android:id="@+id/allornothing"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:rotation="-90"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/allornothingday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="-90"
                        android:text="MON | SAT"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </LinearLayout>

            </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gridrltv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/header"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginBottom="5px"
            android:background="@color/black">

            <GridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="fill"
                android:fitsSystemWindows="true"
                android:listSelector="@null"
                android:nestedScrollingEnabled="false" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>